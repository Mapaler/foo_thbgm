pkgname=deadbeef-thbgm
pkgver=1.0
pkgrel=1
pkgdesc="THBGM Player for deadbeef"
arch=('i686' 'x86_64')
license=('GPLv2')
depends=('deadbeef>0.5')
makedepends=('cmake')

build() {
	cd ${srcdir}
	cmake .. \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release
	make
	make DESTDIR=${pkgdir} install
}
